[core]
  pager = delta

[interactive]
  diffFilter = delta --color-only

[delta]
  navigate = true
  side-by-side = true
  line-numbers = true
  line-numbers-left-format = "{nm:>3}|"
  line-numbers-right-format = "{np:>3}|"
  syntax-theme = ansi
  pager = 'bat --plain'

[merge]
  conflictstyle = diff3

[diff]
  colorMoved = default
