#!/bin/bash

command_exists() {
  command -v "$1" >/dev/null 2>&1
}

if ! command_exists stow; then
  echo "stow not found, install gnu stow before continuing..."
  exit 2
fi

stow -d "$HOME/.dotfiles" -t "$HOME" --dotfiles dotfiles
if [ $(uname) = 'Darwin' ]; then
  stow -d "$HOME/.dotfiles/dotfiles/dot-config/vscode" -t "$HOME/Library/Application Support/Code/User"
  # stow -d "$HOME/.dotfiles/" -t "$HOME" macos
fi
