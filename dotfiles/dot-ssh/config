Host *
  IdentitiesOnly yes
  ControlMaster auto
  ControlPath ~/.ssh/control-%r@%n:%p

Host hades
  Hostname localhost
  AddKeysToAgent yes
  IdentityFile ~/.ssh/id_ed25519
  UserKnownHostsFile /dev/null
  StrictHostKeyChecking no
  ProxyCommand=$(sshnp -f @xavierchanth -t @xchan -r @xchan_8286 -d hades -u chant -x 2>/dev/null) -W "%h:%p" -o "StrictHostKeyChecking=no"

Host charon
  Hostname localhost
  AddKeysToAgent yes
  IdentityFile ~/.ssh/id_ed25519
  UserKnownHostsFile /dev/null
  StrictHostKeyChecking no
  ProxyCommand=$(sshnp -f @xavierchanth -t @xchan -r @xchan_8286 -d charon -u chant -x 2>/dev/null) -W "%h:%p" -o "StrictHostKeyChecking=no"

Host fedora-40
  ProxyJump charon

Host ubuntu-20-04
  ProxyJump charon

Host ubuntu-22-04
  ProxyJump charon

Host ubuntu-24-04
  ProxyJump charon

Host docker
  ProxyJump charon

Host uplink
  Hostname localhost
  AddKeysToAgent yes
  IdentityFile ~/.ssh/id_ed25519
  UserKnownHostsFile /dev/null
  StrictHostKeyChecking no
  ProxyCommand=$(sshnp -f @xavierchanth -t @xchan_8286 -r @xchan_8286 -d uplink -u chant -x 2>/dev/null) -W "%h:%p" -o "StrictHostKeyChecking=no"
